<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sentinel DSS | Güvenli Giriş</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root { --bg-dark: #0d1117; --bg-card: #161b22; --accent: #2f81f7; --text: #c9d1d9; }
        
        body { 
            background-color: var(--bg-dark); 
            color: var(--text); 
            height: 100vh; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            font-family: 'Segoe UI', sans-serif;
            overflow: hidden;
        }

        /* Arka Plan Efekti (Hafif Grid) */
        body::before {
            content: "";
            position: absolute;
            top: 0; left: 0; width: 100%; height: 100%;
            background-image: radial-gradient(#30363d 1px, transparent 1px);
            background-size: 30px 30px;
            opacity: 0.1;
            z-index: -1;
        }

        .login-card {
            background-color: var(--bg-card);
            border: 1px solid #30363d;
            padding: 40px;
            border-radius: 16px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
            text-align: center;
            position: relative;
        }

        .brand-icon {
            font-size: 3rem;
            color: var(--accent);
            margin-bottom: 10px;
            text-shadow: 0 0 15px rgba(47, 129, 247, 0.5);
        }

        .login-title {
            color: #f0f6fc;
            font-weight: 700;
            margin-bottom: 5px;
            letter-spacing: 1px;
        }

        .login-subtitle {
            font-size: 0.85rem;
            color: #8b949e;
            margin-bottom: 30px;
        }

        .form-control {
            background-color: #0d1117;
            border: 1px solid #30363d;
            color: #fff;
            padding: 12px;
            margin-bottom: 15px;
        }
        .form-control:focus {
            background-color: #0d1117;
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(47, 129, 247, 0.2);
            color: #fff;
        }

        .btn-login {
            background-color: var(--accent);
            color: #fff;
            width: 100%;
            padding: 12px;
            font-weight: 600;
            border: none;
            border-radius: 6px;
            transition: all 0.3s;
        }
        .btn-login:hover {
            background-color: #1f6feb;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(47, 129, 247, 0.3);
        }

        .error-msg {
            color: #ff4560;
            font-size: 0.85rem;
            margin-top: 15px;
            display: none; /* Başlangıçta gizli */
        }

        .footer-text {
            font-size: 0.75rem;
            color: #484f58;
            margin-top: 30px;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="brand-icon"><i class="fa-solid fa-chess-queen"></i></div>
        <h3 class="login-title">SENTINEL DSS</h3>
        <p class="login-subtitle">Stratejik Karar Merkezi</p>

        <form id="loginForm">
            <input type="text" class="form-control" id="username" placeholder="Kullanıcı Adı" value="admin">
            <input type="password" class="form-control" id="password" placeholder="Şifre" value="">
            <button type="submit" class="btn btn-login">
                <i class="fa-solid fa-arrow-right-to-bracket me-2"></i> GİRİŞ YAP
            </button>
        </form>

        <div id="errorBox" class="error-msg">
            <i class="fa-solid fa-circle-exclamation me-1"></i> Hatalı kullanıcı adı veya şifre!
        </div>

        <div class="footer-text">
            &copy; 2025 Sentinel Systems v2.4 <br>
            Authorized Personnel Only
        </div>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault(); // Sayfa yenilenmesini engelle
            
            const u = document.getElementById('username').value;
            const p = document.getElementById('password').value;
            const btn = document.querySelector('.btn-login');
            const err = document.getElementById('errorBox');

            // --- SAHTE GİRİŞ KONTROLÜ ---
            // Jüriye sunarken şifre: "1234"
            if (u === 'admin' && p === '1234') {
                // Giriş Başarılı
                err.style.display = 'none';
                btn.innerHTML = '<i class="fa-solid fa-circle-notch fa-spin"></i> Yönlendiriliyor...';
                btn.style.backgroundColor = '#2ea043'; // Yeşil yap
                
                // 1 saniye bekleyip Dashboard'a yönlendir (Gerçekçilik için)
                setTimeout(() => {
                    window.location.href = '/panel'; // Dashboard rotası
                }, 1000);
            } else {
                // Hatalı Giriş
                err.style.display = 'block';
                // Giriş kutusunu salla (Animasyon)
                document.querySelector('.login-card').animate([
                    { transform: 'translateX(0)' },
                    { transform: 'translateX(-10px)' },
                    { transform: 'translateX(10px)' },
                    { transform: 'translateX(0)' }
                ], { duration: 300 });
            }
        });
    </script>
</body>
</html>